<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="tweet"
            type="com.duphungcong.twitterclient.models.Tweet" />
    </data>
    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/item_margin"
            android:src="@drawable/image_loading"
            app:imageUrl="@{tweet.user.profileImageUrl}"/>
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivAvatar"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/item_margin"
            android:text="@{tweet.user.name}"/>
        <TextView
            android:id="@+id/tvScreenName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvName"
            android:layout_alignParentTop="true"
            android:text="@{tweet.user.screenName}"/>
        <TextView
            android:id="@+id/tvCreatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivAvatar"
            android:layout_below="@+id/tvName"
            android:text="@{tweet.createdAt}"/>
        <TextView
            android:id="@+id/tvBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivAvatar"
            android:layout_below="@+id/tvCreatedAt"
            android:layout_alignParentEnd="true"
            android:text="@{tweet.text}"
            android:autoLink="all"
            android:textColorLink="@color/textColorLink" />
    </RelativeLayout>
</layout>